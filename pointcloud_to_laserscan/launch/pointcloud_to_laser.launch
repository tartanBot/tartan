<?xml version="1.0"?>

<launch>

    <!-- push pointcloud_to_laserscan nodelet into sensor's nodelet manager-->
   <node pkg="nodelet" type="nodelet" name="pointcloud_to_laserscan" args="load pointcloud_to_laserscan/pointcloud_to_laserscan_nodelet tartan_pcl_man">

        <remap from="cloud_in" to="/sick_3vistort_driver/points"/>    
        <remap from="scan" to="/sick/scan"/>
        <rosparam>
            target_frame: base_link # Leave disabled to output scan in pointcloud frame    #/sick_3vistort_driver/points
            transform_tolerance: 0.01
            min_height: -5.0
            max_height: 5.0

            angle_min: -1.5708 # -M_PI/2
            angle_max: 1.5708 # M_PI/2
            angle_increment: 0.0087 # M_PI/360.0  0.5 deg
            scan_time: 0.3333
            range_min: 0.1
            range_max: 10.0
            use_inf: false
            inf_epsilon: 1.0

            # Concurrency level, affects number of pointclouds queued for processing, thread number governed by nodelet manager
            # 0 : Detect number of cores
            # 1 : Single threaded
            # 2->inf : Parallelism level
            concurrency_level: 1
        </rosparam>

    </node>

</launch>
